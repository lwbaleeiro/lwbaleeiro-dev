---
interface Project {
  title: string;
  description: string;
  tags: string[];
  link?: string;
  github?: string;
}

const projects: Project[] = [
  {
    title: 'Cross Device Authentication',
    description: 'Cross-device authentication allows users to log in once on one device and access services on others without re-authenticating.',
    tags: ['Java', 'Spring Boot', 'PostgreSQL', 'Redis', 'Docker'],
    github: 'https://github.com/lwbaleeiro/cross-device-auth'
  },
  {
    title: 'Smart Stock App',
    description: 'Predictive intelligence platform that helps e-commerce and retail companies forecast future demand, optimizing inventory and purchasing management.',
    tags: ['Python', 'FastAPI', 'Docker', 'AWS', 'Lambda', 'S3', 'Terraform', 'PostgreSQL', 'Data Science'],
    github: 'https://github.com/lwbaleeiro/smart-stock-app'
  },
  {
    title: 'EventHub',
    description: 'EventHub is a platform for event management and recommendation.',
    tags: ['Java', 'Spring Boot', 'Kafka', 'PostgreSQL', 'Redis', 'Docker'],
    github: 'https://github.com/lwbaleeiro/eventhub'
  }
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full mt-8">
  {projects.map((project) => (
    <div class="group flex flex-col p-6 rounded-xl bg-tokyo-dark/40 border border-tokyo-blue/10 hover:border-tokyo-blue/30 transition-all duration-300 hover:-translate-y-1">
      <div class="flex-1 space-y-4">
        <h3 class="text-xl font-bold text-tokyo-blue group-hover:text-tokyo-cyan transition-colors">
          {project.title}
        </h3>
        <p class="text-tokyo-fg/80 text-sm leading-relaxed">
          {project.description}
        </p>
      </div>
      
      <div class="mt-6 pt-4 border-t border-tokyo-comment/20">
        <div class="flex flex-wrap gap-2 mb-4">
          {project.tags.map((tag) => (
            <span class="px-2 py-1 text-xs rounded-md bg-tokyo-blue/10 text-tokyo-blue border border-tokyo-blue/20">
              {tag}
            </span>
          ))}
        </div>
        
        <div class="flex items-center gap-4">
          {project.github && (
            <a 
              href={project.github} 
              target="_blank" 
              rel="noopener noreferrer" 
              class="text-tokyo-comment hover:text-tokyo-fg transition-colors"
              data-project={project.title}
              onclick={`gtag('event', 'click', { 'event_category': 'project_link', 'event_label': '${project.title}', 'value': '${project.github}' });`}
            >
              <span class="sr-only">GitHub</span>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  ))}
</div>
