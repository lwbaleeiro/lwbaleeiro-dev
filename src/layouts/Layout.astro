---
import '../styles/global.css';
import ThemeToggle from '../components/ThemeToggle.astro';
import LanguagePicker from '../components/LanguagePicker.astro';

interface Props {
	title: string;
    description?: string;
}

const { title, description = "Backend Developer Portfolio & Blog" } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Google Analytics 4 -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-FSH28J3HTX"></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-FSH28J3HTX');
		</script>
		
		<title>{title}</title>
	</head>
	<body>
        <header class="absolute top-0 right-0 p-4 z-50 flex items-center gap-4">
            <LanguagePicker />
            <ThemeToggle />
        </header>
		<slot />
	</body>
</html>
